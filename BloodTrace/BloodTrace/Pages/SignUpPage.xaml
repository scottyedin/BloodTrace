<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BloodTrace.Pages.SignUpPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Image Source="bloodlogo.png" Grid.Row="0" Margin="0,40,0,0" HeightRequest="200" WidthRequest="200"/>
            <StackLayout Grid.Row="1" Margin="40,20,40,0">
                <Entry x:Name="EntEmail" Placeholder="Email" PlaceholderColor="#707070"/>
                <Entry x:Name="EntPassword" IsPassword="True" Placeholder="Password" PlaceholderColor="#707070"/>
                <Entry x:Name="EntConfirmPassword" IsPassword="True" Placeholder="Confirm Password" PlaceholderColor="#707070"/>
                <Button x:Name="BtnSignUp" Text="SIGN UP" BackgroundColor="#c62729" TextColor="White" Clicked="BtnSignUp_Clicked"/>
            </StackLayout>
        </Grid>
            
            
    </ContentPage.Content>
</ContentPage>